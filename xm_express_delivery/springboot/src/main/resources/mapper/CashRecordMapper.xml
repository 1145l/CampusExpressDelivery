<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CashRecordMapper">

    <select id="selectAll" resultType="com.example.entity.CashRecord">
        select cash_record.*, student.name as courierName from `cash_record`
        left join student on cash_record.courier_id = student.id
        <where>
            <if test="courierName != null"> and student.name like concat('%', #{courierName}, '%')</if>
            <if test="courierId != null"> and cash_record.courier_id = #{courierId}</if>
        </where>
        order by cash_record.id desc
    </select>

    <delete id="deleteById">
        delete from `cash_record`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.CashRecord" useGeneratedKeys="true">
        insert into cash_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="courierId != null">courier_id,</if>
            <if test="img != null">img,</if>
            <if test="status != null">status,</if>
            <if test="money != null">money,</if>
            <if test="applyTime != null">apply_time,</if>
            <if test="feedback != null">feedback,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="courierId != null">#{courierId},</if>
            <if test="img != null">#{img},</if>
            <if test="status != null">#{status},</if>
            <if test="money != null">#{money},</if>
            <if test="applyTime != null">#{applyTime},</if>
            <if test="feedback != null">#{feedback},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.CashRecord">
        update cash_record
        <set>
            <if test="courierId != null">
                courier_id = #{courierId},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="money != null">
                money = #{money},
            </if>
            <if test="applyTime != null">
                apply_time = #{applyTime},
            </if>
            <if test="feedback != null">
                feedback = #{feedback},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>